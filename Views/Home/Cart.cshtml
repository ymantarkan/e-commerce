@using urun_katalog.Models
@model List<Product>
@{
    ViewData["Title"] = "Cart";
}
<h1>Your Cart</h1>
<br>

<div class="row">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Product Type</th>
                <th>Product Color</th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/@item.Image" width="200px" height="150px"/>
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Category.ProductName</td>
                    <td>@item.ProductColor</td>
                    <td>
                       <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">
                           <i class="fas fa-trash-alt"></i>
                       </a>
                    </td>
                </tr>
                
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-md-6">
        <a asp-action="Index" asp-controller="Home" class="btn btn-success">Back To Home</a>
    </div>
    <div class="col-md-6 text-right">
        <h3>Total Amountt</h3>
        <h3>Grant Total:@Model.Sum(p=>p.Price)</h3>
        <a asp-action="Checkout" asp-controller="Order" class="btn btn-info">Process the Checkout</a>
    </div>
</div>
